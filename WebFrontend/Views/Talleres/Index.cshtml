@{
    ViewData["Title"] = "Buscador de Talleres | Vuelta al Cole | Michelin";
}
@section Styles{
    <style>
        a:hover {
            color: #ffe300;
            text-decoration: none;
        }

        .tit {
            line-height: 2;
            margin-bottom: 50px;
        }

        .resTaller::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1);
            border-radius: 10px;
            background-color: #F5F5F5;
        }

        .resTaller::-webkit-scrollbar {
            width: 12px;
            background-color: #F5F5F5;
        }

        .resTaller::-webkit-scrollbar-thumb {
            border-radius: 10px;
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0);
            background-color: #e0dbdb;
        }
    </style>
}
<div class="content contentMichelinForm">
    <div class="container containerMichelinForm">
        <div id="containerForm">
            <div class="tit">encuentra <img src="~/images/txt_tu.png" alt="tu" class="img-fluid" style="vertical-align: text-bottom;" /> taller <br /> ADHERIDO A LA PROMOCIÓN</div>
            <div class="titError3" style="display:none;">No se han encontrado Talleres</div>
            <form id="frmFormulario">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group">
                            <input type="text" name="abuscar" id="abuscar" class="form-control" value="" placeholder="Introduce Código Postal o Localidad">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 frmCol">
                        <div class="btnFrmEnviado">Buscar</div>
                    </div>
                </div>
            </form>
            <div class="resTaller">
                <div class="spinner-grow text-primary" style="width: 5rem; height: 5rem; display:none;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <ul></ul>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/views/Talleres/index.js"></script>
}