@model WebFrontend.Models.ParticipationEnviarFisicoViewModel
@{
    ViewData["Title"] = "Formulario | Vuelta al Cole | Michelin";
}
@section Styles{
    <style>
        /* talleres select style */
        .select2-selection__rendered {
            text-align: center;
            font-style: italic;
        }

        .select2-selection--single {
            height: 30px !important;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow b {
            border-width: 5px 5px 0 5px !important;
            border-color: black transparent transparent transparent !important;
        }
        .adduploadbtn {
            background-color: #0254aa;
            font-family: ArialBoldIt;
            font-size: 14px;
            font-weight: bold;
            font-style: italic;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: 0.6px;
            text-align: center;
            color: #ffe300;
            padding: 10px;
            /* width: 290px; */
            margin: 7px auto;
            text-transform: uppercase;
            cursor: pointer;
        }
        .borderLine {
            border: 1px solid red;
        }
        .borderdotLine {
            border: 1.2px dotted red;
        }
    </style>
    <link rel="stylesheet" href="~/lib/select2/select2.min.css" />
}
<div class="content contentMichelinForm">
    <div class="container containerMichelinForm">
        <div id="containerForm">
            <div class="tit">Completa el formulario para <br />recibir <img src="~/images/txt_tu.png" alt="tu" class="img-fluid" style="vertical-align: text-bottom;" /> regalo</div>
            <div class="titIndicar">REGÍSTRATE CON LOS DATOS QUE HAS FACILITADO PARA TU FACTURA</div>
            <div class="titError2" style="display:none;">Completa los campos marcados en rojo</div>
            <form id="frmFormulario">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <select class="form-control input100 search" name="id_tall" id="id_tall"></select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" name="nombre_par" placeholder="Nombre">
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" name="apellidos_par" placeholder="Apellidos">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" id="email_par" name="email_par" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" name="confirm_email_par" placeholder="Repite Email">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" name="telefono_par" placeholder="Teléfono" maxlength="12">
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 frmCol">
                        <div class="form-group sepinput">
                            <select class="form-control input100" name="nacionalidad_par" id="nacionalidad_par">
                                <option value="">Nacionalidad</option>
                                <option value="ESPAÑA">ESPAÑA</option>
                                <option value="OTRA">OTRA</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" name="direccion_par" placeholder="Dirección">
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" name="codigopostal_par" placeholder="Código Postal">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <select id="provincia_par" name="provincia_par" class="form-control input100">
                                <option value="">Provincia</option>
                                <option value="A Coruña">A Coruña</option>
                                <option value="Álava">Álava</option>
                                <option value="Albacete">Albacete</option>
                                <option value="Alicante">Alicante</option>
                                <option value="Almería">Almería</option>
                                <option value="Andorra">Andorra</option>
                                <option value="Asturias">Asturias</option>
                                <option value="Ávila">Ávila</option>
                                <option value="Badajoz">Badajoz</option>
                                <option value="Barcelona">Barcelona</option>
                                <option value="Burgos">Burgos</option>
                                <option value="Cáceres">Cáceres</option>
                                <option value="Cádiz">Cádiz</option>
                                <option value="Cantabria">Cantabria</option>
                                <option value="Castellón">Castellón</option>
                                <option value="Ceuta">Ceuta</option>
                                <option value="Ciudad Real">Ciudad Real</option>
                                <option value="Córdoba">Córdoba</option>
                                <option value="Cuenca">Cuenca</option>
                                <option value="Gerona">Gerona</option>
                                <option value="Girona">Girona</option>
                                <option value="Las Palmas">Las Palmas</option>
                                <option value="Granada">Granada</option>
                                <option value="Guadalajara">Guadalajara</option>
                                <option value="Guipúzcoa">Guipúzcoa</option>
                                <option value="Huelva">Huelva</option>
                                <option value="Huesca">Huesca</option>
                                <option value="Jaén">Jaén</option>
                                <option value="La Rioja">La Rioja</option>
                                <option value="León">León</option>
                                <option value="Lleida">Lleida</option>
                                <option value="Lugo">Lugo</option>
                                <option value="Madrid">Madrid</option>
                                <option value="Malaga">Málaga</option>
                                <option value="Mallorca">Mallorca</option>
                                <option value="Melilla">Melilla</option>
                                <option value="Murcia">Murcia</option>
                                <option value="Navarra">Navarra</option>
                                <option value="Orense">Orense</option>
                                <option value="Palencia">Palencia</option>
                                <option value="Pontevedra">Pontevedra</option>
                                <option value="Salamanca">Salamanca</option>
                                <option value="Segovia">Segovia</option>
                                <option value="Sevilla">Sevilla</option>
                                <option value="Soria">Soria</option>
                                <option value="Tarragona">Tarragona</option>
                                <option value="Tenerife">Tenerife</option>
                                <option value="Teruel">Teruel</option>
                                <option value="Toledo">Toledo</option>
                                <option value="Valencia">Valencia</option>
                                <option value="Valladolid">Valladolid</option>
                                <option value="Vizcaya">Vizcaya</option>
                                <option value="Zamora">Zamora</option>
                                <option value="Zaragoza">Zaragoza</option>
                            </select>

                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <input type="text" class="form-control input100" name="localidad_par" placeholder="Localidad">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput" id="dni_par">
                            <input type="text" class="form-control input100" name="dni_par" placeholder="DNI/CIF">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 frmCol">
                        <div class="form-group sepinput">
                            <select id="dondeconociste_par" name="dondeconociste_par" class="form-control input100">
                                <option value="">¿Dónde has visto la promoción?</option>
                                <option value="En el taller">En el taller</option>
                                <option value="En Redes Sociales">En Redes Sociales</option>
                                <option value="En la Radio">En la Radio</option>
                                <option value="En la web de Michelin">En la web de Michelin</option>
                                <option value="Otros">Otros</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row upload_area">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol">
                        <label class="control-label etFrm">Subir imagen 1</label>
                        <div class="form-group">
                            <input type="file" name="ImageFiles" class="adjunto">
                            <input type="hidden" name="adjunto_par" id="adjunto_par" />
                            <div class="upload-area adjunto-file first-file">
                                <p class="p1"><u>Selecciona</u> o arrastra un archivo<br />(M&aacute;x 4MB, JPG/PNG/PDF)</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 frmCol adduploadbtn-area">
                        <label class="control-label etFrm"></label>
                        <div class="form-group">
                            <div class="adduploadbtn">TENGO OTRA FACTURA</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 frmCol">
                        <div class="checkbox checkbox-primary" id="chk_pri">
                            <input id="chckprivacidad" type="checkbox" name="chckprivacidad">
                            <label id="labchckprivacidad" for="chckprivacidad">Acepto las Bases Legales de la Promoción y la Política de Privacidad.</label>
                        </div>

                        <div class="checkbox checkbox-primary" id="chk_com">
                            <input id="chckcomercial" type="checkbox" name="comercial_par">
                            <label id="labchckcomercial" for="chckcomercial">Acepto recibir de Michelin España Portugal, S.A., incluso por medios electrónicos (i.e. SMS, MMS, WhatsApp, etc.) comunicaciones comerciales, promocionales o de información sobre productos o servicios y novedades relacionados con el sector de neumáticos de turismo, vehículos comerciales, 4x4/SUV y moto.</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 frmCol">
                        <div id="indexRecaptcha">
                            <div class="g-recaptcha" data-sitekey="6LdHxLIUAAAAAGeLKc0UsxWaWZ2gtr9fMRX9f6YY" data-callback="recaptcha_callback();"></div>
                            <input type="hidden" class="hiddenRecaptcha" name="hiddenRecaptcha" id="hiddenRecaptcha">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 frmCol">
                        <div id="btnFrm">
                            <div class="btnFrm" id="btnEnivar">Enviar PArticipación</div>
                        </div>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/js/views/Formulario/fisico.js"></script>

}