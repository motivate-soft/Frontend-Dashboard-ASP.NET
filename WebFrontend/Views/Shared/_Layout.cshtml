@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Michelin &amp; Tú">
    <meta property="og:type" content="article">
    <meta property="og:url" content="https://promociones.michelin.es/">
    <meta property="og:image" content="https://promociones.michelin.es/Content/imagen_rrss.png">
    <meta property="og:image:width" content="650">
    <meta property="og:image:height" content="265">
    <meta property="og:site_name" content="Michelin &amp; Tú">
    <meta property="og:description" content="MICHELIN Y TÚ ¡ESTE VERANO ELIGE MICHELIN! HASTA EL 31 DE JULIO COMPRA NEUMÁTICOS MICHELIN PARA TU COCHE O MOTO  ABRIL Y ¡CONSIGUE HASTA 60€!  CONSIGUE HASTA 60€ Y ELIGE LO QUE TÚ QUIERAS MÁS INFORMACIÓN Y TALLERES ADHERIDOS EN promociones.michelin.es">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/bootstrap4.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/promomichelin.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    @RenderSection("Styles", required: false)
</head>
<body>
    @await Html.PartialAsync("_Header")
    @RenderBody()

    @await Html.PartialAsync("_Footer")

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    <!--serializeJSON-->
    <script src="~/lib/marioizquierdo-jquery.serializeJSON/jquery.serializejson.min.js"></script>
    <script>
        $(".headmenu").on('click', function () {
            //$('.menudesplegado').toggle();
        });
        $(".headmenumov").on('click', function () {
            $('.menudesplegado').toggle();
        });
        $(".headmenu img").on('click', function () {
            $('.menudesplegado').toggle();
        });

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
